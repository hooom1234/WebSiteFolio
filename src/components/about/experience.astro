---
// Data
import { jobs } from "../../data/jobsData";
---

<section class="site-container experience mt-20 mx-auto max-w-5xl px-4 sm:px-6">
  <h2 class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-start mb-16">
    <span class="relative z-10">
      Experience
      <span class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-[#7836cf] to-[#0debd8] rounded-full opacity-80"></span>
    </span>
    <span class="hidden h-px grow bg-gradient-to-r from-zinc-800 to-transparent md:block"></span>
  </h2>

  <div class="relative border-l-2 border-zinc-800 ml-3 md:ml-6 space-y-12 pb-12">
    {
      jobs.map(({ title, time, description, list }, index) => (
        <div class="relative pl-8 md:pl-12 group transition-all duration-300 ease-in-out">
          
          <span class="absolute -left-[9px] top-0 mt-1.5 h-4 w-4 rounded-full border-2 border-[#1a1a1a] bg-zinc-600 group-hover:bg-[#0debd8] group-hover:scale-125 group-hover:shadow-[0_0_10px_#0debd8] transition-all duration-300"></span>

          <article class="relative flex flex-col gap-4 rounded-xl border border-zinc-800 bg-zinc-900/50 p-6 shadow-lg backdrop-blur-sm transition-all hover:border-[#7836cf]/50 hover:bg-zinc-900/80 hover:shadow-[0_4px_20px_-10px_rgba(120,54,207,0.3)]">
            
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
              <h3 class="text-2xl font-bold text-white group-hover:text-[#0debd8] transition-colors">
                {title}
              </h3>
              <div class="flex flex-wrap gap-2 text-sm font-medium">
                {time.map((t) => (
                  <span class="rounded-full bg-zinc-800 px-3 py-1 text-zinc-300 border border-zinc-700/50">
                    {t}
                  </span>
                ))}
              </div>
            </div>

            <p class="text-zinc-400 leading-relaxed text-base border-l-2 border-[#7836cf]/30 pl-4">
              {description}
            </p>

            <ul class="grid gap-4 pt-2">
              {list.map((item) => {
                const isObject = typeof item === 'object' && item !== null;
                const text = isObject ? item.text : item;
                const image = isObject ? item.image : null;

                return (
                  <li class="flex flex-col gap-2 text-zinc-300">
                    <div class="flex items-start gap-3">
                        <span class="mt-1.5 min-w-[6px] h-1.5 w-1.5 rounded-full bg-[#7836cf]"></span>
                        <span class="text-sm leading-relaxed font-medium">{text}</span>
                    </div>

                    {image && (
                        <details open class="group/image ml-5 mt-1">
                            <summary class="cursor-pointer list-none text-xs font-medium text-[#0debd8] opacity-70 hover:opacity-100 hover:underline flex items-center gap-1.5 w-fit select-none transition-all">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
                                <span>รูปภาพประกอบ</span>
                                <span class="group-open/image:rotate-180 transition-transform duration-300">▼</span>
                            </summary>
                            
                            {/* แก้ไข Container: 
                                - เพิ่ม w-fit (ให้กว้างเท่าเนื้อหา)
                                - เพิ่ม max-w-full (ไม่ให้เกินจอ)
                            */}
                            <div class="mt-3 w-fit max-w-full relative overflow-hidden rounded-xl border border-white/10 bg-zinc-900/50 p-2 shadow-[0_8px_30px_rgb(0,0,0,0.5)] backdrop-blur-md transition-all hover:border-[#0debd8]/30 group-open/image:animate-in group-open/image:fade-in group-open/image:slide-in-from-top-1">
                                <div class="relative group/img-inner rounded-lg overflow-hidden">
                                    {/* แก้ไข Image:
                                        - ลบ w-full (ไม่บังคับเต็ม)
                                        - ใช้ w-auto (กว้างตามจริง)
                                        - ลบ object-cover (ไม่ให้ crop ภาพ)
                                    */}
                                    <img 
                                        src={image} 
                                        alt={text} 
                                        class="block w-auto h-auto max-w-full max-h-[450px] object-contain rounded-lg transition-all duration-700 group-hover/img-inner:scale-[1.02]"
                                        loading="lazy"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-[#7836cf]/30 via-transparent to-transparent opacity-0 group-hover/img-inner:opacity-100 transition-opacity duration-500 pointer-events-none rounded-lg"></div>
                                </div>
                            </div>
                        </details>
                    )}
                  </li>
                );
              })}
            </ul>
          </article>
        </div>
      ))
    }
  </div>
</section>